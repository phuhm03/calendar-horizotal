<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_4sdp"
    android:background="@drawable/bg_cal_hor_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_3sdp">

    <RelativeLayout
        android:id="@+id/rlDay"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:background="@drawable/bg_cal_hor_day_selector">

        <TextView
            android:id="@+id/tvDay"
            style="@style/TextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="2"
            android:minLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            tools:text="22" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDayOfWeek"
        style="@style/TextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:minLines="1"
        android:textColor="@color/color_text_cal_hor"
        android:textSize="@dimen/_12ssp"
        tools:text="Mon" />

    <View
        android:id="@+id/vIndicator"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/bg_cal_hor_indicator_selector" />
</LinearLayout>